<?xml version="1.0" encoding="utf-8"?>
<com.rainmachine.presentation.widgets.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:minHeight="@dimen/height_card_without_image"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:scaleType="center"
        tools:src="@drawable/ic_start_blue_bg_transparent" />

    <LinearLayout
        android:id="@+id/view_name_schedule"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/text_xlarge"
            tools:text="Program 1 with a long title and very explicit" />

        <TextView
            android:id="@+id/schedule"
            fontPath="fonts/Roboto-Light.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large"
            tools:ignore="MissingPrefix"
            tools:text="Even days at 05:18 PM" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:scaleType="center"
        tools:src="@drawable/ic_edit_blue_bg_transparent" />
</com.rainmachine.presentation.widgets.CheckableLinearLayout>