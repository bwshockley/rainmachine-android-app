<com.rainmachine.presentation.screens.devices.DevicesView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_devices"
    style="@style/ScreenMargins"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.screens.devices.DevicesActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay" />

    <TextView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/devices_no_rain_machines_found"
        android:textSize="@dimen/text_xlarge"
        android:visibility="gone"
        tools:text="@string/devices_no_rain_machines_found" />
</com.rainmachine.presentation.screens.devices.DevicesView>
