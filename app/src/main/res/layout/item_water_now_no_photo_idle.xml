<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_item"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:minHeight="@dimen/height_card_without_image"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/view_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:foreground="@drawable/selector_icon">

        <ImageView
            android:id="@+id/img_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:scaleType="center"
            tools:src="@drawable/ic_start_blue_bg_transparent" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/zone_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/text_xlarge"
            tools:ignore="MissingPrefix"
            tools:text="Lawn near the alley about dogs and cats and horses" />

        <TextView
            android:id="@+id/zone_status"
            fontPath="fonts/Roboto-Light.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large"
            tools:ignore="MissingPrefix"
            tools:text="Next watering: Oct 27" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/view_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:foreground="@drawable/selector_icon">

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:scaleType="center"
            tools:src="@drawable/ic_edit_blue_bg_transparent" />
    </FrameLayout>
</LinearLayout>