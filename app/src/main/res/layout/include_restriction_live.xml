<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_restriction_live"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_restriction_live"
    android:clickable="true"
    android:gravity="center_vertical"
    android:minHeight="@dimen/min_height_row_two_lines"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/spacing_medium"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:paddingTop="@dimen/spacing_medium"
    android:visibility="gone"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_restriction_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_larger"
            tools:text="RainMachine is PAUSED!" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_view_watering_restrictions"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_num_active_restrictions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/badge"
        android:gravity="center"
        android:paddingBottom="@dimen/spacing_small"
        android:paddingLeft="@dimen/spacing_medium"
        android:paddingRight="@dimen/spacing_medium"
        android:paddingTop="@dimen/spacing_small"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_larger"
        tools:text="4" />
</LinearLayout>