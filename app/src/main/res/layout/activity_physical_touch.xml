<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.screens.physicaltouch.PhysicalTouchActivity">

    <include layout="@layout/include_toolbar" />

    <com.rainmachine.presentation.screens.physicaltouch.PhysicalTouchView
        style="@style/ScreenMargins"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_padding"
        android:paddingLeft="@dimen/activity_horizontal_padding"
        android:paddingRight="@dimen/activity_horizontal_padding"
        android:paddingTop="@dimen/activity_vertical_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/physical_touch_button"
            android:textSize="@dimen/text_larger" />

        <ImageView
            android:id="@+id/iv_device_screenshot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:adjustViewBounds="true"
            android:src="@drawable/backlit_buttons" />
    </com.rainmachine.presentation.screens.physicaltouch.PhysicalTouchView>
</LinearLayout>