<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/SectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zone_details_vegetation_type" />

    <include layout="@layout/include_divider" />

    <android.support.v7.widget.CardView
        style="@style/CardViewZoneStyle.SingleLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zone_details_allowed_depletion"
                    android:textSize="@dimen/text_larger" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zone_details_decimal_percentage"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_larger" />
            </LinearLayout>

            <EditText
                android:id="@+id/input_allowed_depletion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:minEms="4"
                android:singleLine="true" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/include_divider" />

    <android.support.v7.widget.CardView
        style="@style/CardViewZoneStyle.SingleLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zone_details_root_depth"
                    android:textSize="@dimen/text_larger" />

                <TextView
                    android:id="@+id/tv_units_root_depth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_larger"
                    tools:text="@string/all_inch" />
            </LinearLayout>

            <EditText
                android:id="@+id/input_root_depth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:minEms="4"
                android:singleLine="true" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/include_divider" />

    <android.support.v7.widget.CardView
        style="@style/CardViewZoneStyle.SingleLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zone_details_wilting"
                    android:textSize="@dimen/text_larger" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zone_details_decimal_percentage"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_larger" />
            </LinearLayout>

            <EditText
                android:id="@+id/input_wilting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:minEms="4"
                android:singleLine="true" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/include_divider" />

    <android.support.v7.widget.CardView
        style="@style/CardViewZoneStyle.SingleLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/toggle_tall_vegetation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zone_details_tall_vegetation"
                android:textSize="@dimen/text_larger" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/include_divider" />

    <TextView
        style="@style/SectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zone_details_crop_coefficient" />

    <include layout="@layout/include_divider" />

    <android.support.v7.widget.CardView
        style="@style/CardViewZoneStyle.SingleLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/check_single_year_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zone_details_single_year_value"
                    android:textSize="@dimen/text_larger" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zone_details_decimal_percentage"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_larger" />
            </LinearLayout>

            <EditText
                android:id="@+id/input_single_year_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:minEms="4"
                android:singleLine="true" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/include_divider" />

    <android.support.v7.widget.CardView
        style="@style/CardViewZoneStyle.SingleLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_multiple_monthly_values"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_action_next_item"
                android:gravity="center_vertical"
                android:text="@string/zone_details_multiple_monthly_values"
                android:textSize="@dimen/text_larger" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/include_divider" />
</LinearLayout>