<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <net.simonvt.numberpicker.NumberPicker
        android:id="@+id/number_picker_cycles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:defaultValue="@integer/default_value_minutes"
        app:maxValue="@integer/max_value_minutes"
        app:minValue="@integer/min_value_minutes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_cycle_soak"
        android:paddingRight="@dimen/padding_cycle_soak"
        android:text="@string/program_details_cycles_delayed_by"
        android:textSize="@dimen/text_cycle_soak" />

    <net.simonvt.numberpicker.NumberPicker
        android:id="@+id/number_picker_soak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:defaultValue="@integer/default_value_minutes"
        app:maxValue="@integer/max_value_minutes"
        app:minValue="@integer/min_value_minutes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_cycle_soak"
        android:text="@string/program_details_min"
        android:textSize="@dimen/text_cycle_soak" />
</LinearLayout>